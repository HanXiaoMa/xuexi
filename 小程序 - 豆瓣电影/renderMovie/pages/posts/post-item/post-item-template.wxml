<template name="postItem">
  <view class='post-container'>
    <view class='post-author'>
      <image class='post-author-img' src='{{avatar}}'></image>
      <text class='post-author-text'>{{date}}</text>
    </view>
    <text class='post-title'>{{title}}</text>
    <image class='post-image' src='{{imgSrc}}'></image>
    <text class='post-content'>{{content}}</text>
    <view class='post-like'>
      <image class='post-like-img' src='/images/icon/chat.png'></image>
      <text class='post-like-text'>{{collection}}</text>
      <image class='post-like-img' src='/images/icon/view.png'></image>
      <text class='post-like-text'>{{reading}}</text>
    </view>
  </view>
</template>