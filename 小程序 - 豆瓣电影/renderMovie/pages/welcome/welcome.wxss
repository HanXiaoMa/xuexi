page{
  background-color: #b3d4db;
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
  margin-bottom: 100rpx;
}
.user-name,.moto{
  font-size: 32rpx;
  font-family: "微软雅黑";
  font-weight: bold;
}
.moto{
  font-size: 22rpx;
  line-height: 80rpx;
}
.moto-container{
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  color: #405f80;
  margin-top: 100rpx;
}